section.rtp_contacts
	.rtp_section__header
		.rtp_section__bg
		.rtp_head__content
			#map.rtp_welcome__thumbnail
	.rtp_container
		.rtp_row
			.col.col--4-of-6
				.rtp_contact__form
					form(method="post" id="contact_form")
						.rtp_row
							.col.col--1-of-2.rtp_form__group
								input(type="text" placeholder="Name" name="name" id="first-name" class="form_input" required="required")
							.col.col--1-of-2.rtp_form__group
								input(type="text" placeholder="Email" name="email" id="email" class="form_input" required="required")
							.col.col--12-of-12.rtp_form__group
								textarea(rows="6" placeholder="Write your message" name="message" id="text_message" class="form_input" required="required")
							.col.col--12-of-12.rtp_form__group
								input(type="submit" value="Send Message" name="message" id="send_message" class="form_submit rtp_btn")
